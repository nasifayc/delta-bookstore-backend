<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <link rel="stylesheet" href="/styles/dashboard.css" />
    <!-- Font Awesome CDN for icons -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
  </head>
  <body>
    <div class="dashboard-container">
      <header class="dashboard-header">
        <h1>Dashboard</h1>
        <div class="search-bar">
          <input
            type="text"
            placeholder="Search for books, users, or settings..."
          />
          <button type="submit">
            <i class="fas fa-search"></i>
            <!-- Search icon from Font Awesome -->
          </button>
        </div>
        <nav>
          <a href="/dashboard/books">All Books</a>
          <a href="/dashboard/books/add">Add Book</a>
          <a href="/dashboard/settings"><%= user.username %></a>
        </nav>
      </header>

      <div class="dashboard-content">
        <aside class="sidebar">
          <div class="company-info">
            <div class="img-box">
              <img src="images/logo.jpg" alt="Company Logo" />
            </div>
            <h2>Delta Bookstore</h2>
          </div>
          <!-- <div class="user-info">
            <% if (user) { %>
            <p><strong>User:</strong> <%= user.username %></p>
            <p><strong>Email:</strong> <%= user.email %></p>
            <p><strong>Role:</strong> <%= user.role %></p>
            <% } else { %>
            <p>Loading user data...</p>
            <% } %>
          </div> -->

          <div class="menu-section">
            <h3>Menu</h3>
            <a href="/dashboard/customers">
              <span class="icon"><i class="fas fa-users"></i></span> Customers
            </a>
            <a href="/dashboard/products">
              <span class="icon"><i class="fas fa-box"></i></span> Products
            </a>
            <a href="/dashboard/transactions">
              <span class="icon"
                ><i class="fas fa-file-invoice-dollar"></i
              ></span>
              Transactions
            </a>
          </div>

          <div class="general-section">
            <h3>General</h3>
            <a href="/dashboard/settings">
              <span class="icon"><i class="fas fa-cogs"></i></span> Settings
            </a>
            <a href="/dashboard/theme">
              <span class="icon"><i class="fas fa-palette"></i></span> Theme
            </a>
          </div>

          <a href="/logout" class="logout-btn">Logout</a>
        </aside>

        <div class="main-content">
          <!-- Main dashboard content here -->
          <div class="books">
            <h3>Total books</h3>
            <p>150+</p>
          </div>
          <div class="users">
            <h3>Total Users</h3>
            <p>250+</p>
          </div>
          <div class="transaction">
            <h3>Transactions</h3>
            <p>ETB 150000</p>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
